@model AMAPG4.ViewModels.UserAccountViewModel
@{
    ViewBag.Title = "Mon Compte";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Mon Compte</title>
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>

    @if (Model.Individual != null)
    {
        <div class="user-profile">
            <h1>Mon Compte</h1>

            <div class="user-info">
                <label>Nom :</label>
                <span>@Model.UserAccount.Name</span>
                
            </div>

            <div class="user-info">
                <label>Prénom :</label>
                <span>@Model.Individual.FirstName</span>
          
            </div>

            <div class="user-info">
                <label>Adresse :</label>
                <span>@Model.UserAccount.Address</span>
             
            </div>

            <div class="user-info">
                <label>Email :</label>
                <span>@Model.UserAccount.Email</span>
            
            </div>

            <div class="user-info">
                <label>Téléphone :</label>
                <span>@Model.UserAccount.Phone</span>
               
            </div>

            <div class="user-info">
                <label>Date d'inscription :</label>
                <span>@Model.Individual.InscriptionDate.ToShortDateString()</span>
              
            </div>

            <div class="user-info">
                <label>Contribution payée :</label>
                <span>@(Model.Individual.IsContributionPaid ? "Oui" : "Non")</span>
            </div>

            <div class="user-info">
                <label>Bénévole :</label>
                <span>@(Model.Individual.IsVolunteer ? "Oui" : "Non")</span>
            </div>
        </div>
    }

    @if (Model.Producer != null)
    {
        <div class="user-profile">
            <h1>Mon Compte Producteur</h1>

            <div class="user-info">
                <label>Nom :</label>
                <span>@Model.UserAccount.Name</span>
            </div>

            <div class="user-info">
                <label>Adresse :</label>
                <span>@Model.UserAccount.Address</span>
            </div>

            <div class="user-info">
                <label>Email :</label>
                <span>@Model.UserAccount.Email</span>
            </div>

            <div class="user-info">
                <label>Téléphone :</label>
                <span>@Model.UserAccount.Phone</span>
            </div>

            <!-- Informations spécifiques à Producer -->
            <div class="user-info">
                <label>Nom du contact :</label>
                <span>@Model.Producer.ContactName</span>
            </div>

            <div class="user-info">
                <label>SIRET :</label>
                <span>@Model.Producer.Siret</span>
            </div>

            <div class="user-info">
                <label>RIB :</label>
                <span>@Model.Producer.RIB</span>
            </div>
        </div>
    }

    @if (Model.CE != null)
    {
        <div class="user-profile">
            <h1>Mon Compte Comité d'Entreprise</h1>

            <div class="user-info">
                <label>Nom :</label>
                <span>@Model.UserAccount.Name</span>
            </div>

            <div class="user-info">
                <label>Adresse :</label>
                <span>@Model.UserAccount.Address</span>
            </div>

            <div class="user-info">
                <label>Email :</label>
                <span>@Model.UserAccount.Email</span>
            </div>

            <div class="user-info">
                <label>Téléphone :</label>
                <span>@Model.UserAccount.Phone</span>
            </div>

            <!-- Informations spécifiques à CE -->
            <div class="user-info">
                <label>Nom du contact :</label>
                <span>@Model.CE.ContactName</span>
            </div>

            <div class="user-info">
                <label>Nombre d'employés :</label>
                <span>@Model.CE.NumberOfEmployees</span>
            </div>

            <div class="user-info">
                <label>Contribution payée :</label>
                <span>@(Model.CE.IsContributionPaid ? "Oui" : "Non")</span>
            </div>
        </div>
    }

</body>
</html>
